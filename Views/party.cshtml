@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = "master.cshtml";
}

@* the fun starts here *@
<hr>
<div class="col-md-12">
    <div class="row h-100 align-items-center">
      <div class="col-md-12 text-center">
        <h1 class="font-weight-light text-dark">@Model.Value("categoryItemName")</h1>
        <p class="lead text-dark ">@Model.Value("description") </p>
		<img class="col-md-6 h-50 w-50" src="/media/owwoocfu/person-pouring-champagne-on-champagne-flutes-3171770.jpg">
      </div>
    </div>
  </div>
<br>
<br>

<div class="d-flex flex-row bd-highlight mb-3">
	<div class="p-2 bd-highlight">
		<h5>@Model.Value("packagesName")</h5>
		<p class="text-description">@Model.Value("packageDescription")</p>
		<h6>Price: @Model.Value("packagePrice")</h6>
		<img class="img-fluid" src="/media/ld4goril/alcoholic-beverages-beverages-blur-bottles-587738.jpg">
		<br><br>
		<button>Buy</button>
		
	</div>
	<div class="p-2 bd-highlight">
		<h5>@Model.Value("packagesMediumName")</h5>
		<p class="text-description">@Model.Value("packagesMediumDescription")</p>
		<h6>Price: @Model.Value("packagesMediumPrice")</h6>
		<img class="img-fluid " src="/media/zjzptr05/people-toasting-wine-glasses-3171837.jpg">
		<br><br>
		<button>Buy</button>
		
	</div>
	<div class="p-2 bd-highlight">
		<h5>@Model.Value("packagesLargeName")</h5>
		<p class="text-description">@Model.Value("packagesLargeDescription")</p>
		<h6>Price: @Model.Value("packagesLargePrice")</h6>
		<img class="img-fluid" src="/media/oi2gjjoo/man-night-bar-barman-110472.jpg">
		<br><br>
		<button>Buy</button>
		
	</div>
	<br>
</div>