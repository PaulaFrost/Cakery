@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = "master.cshtml";
}

@* the fun starts here *@
<hr>

<div class="container container-fluid">
	<div class="row mb-3">
		<div class="col-sm-6 col-md-6 col-xl-6 ">
			<img class="img-fluid" src="/media/ltzkt054/joshua-glass-vilfdijcfvi-unsplash.jpg">
		</div>
		<div class="col-sm-6 col-md-6 col-xl-6">
			<h4>@Model.Value("categoryItemName")</h4>
			<p>@Model.Value("description")</p>
		</div>
	</div>

	<div class="row mb-3">
		<div class="card" style="width: 23rem;">
			<img class="img-fluid" src="/media/vm1n4hel/celebration-colorful-colourful-cupcakes-587741.jpg" alt="...">
			<div class="card-body">
				<h5 class="card-title">@Model.Value("packagesName")</h5>
				<p class="card-text">@Model.Value("packageDescription")
					Price: @Model.Value("packagePrice")
				</p>
				<a href="#" class="btn btn-primary">Buy</a>
			</div>
		</div>

		<div class="card" style="width: 23rem;">
			<img class="img-fluid" class="img-fluid " src="/media/0pbb0hri/anniversary-birthday-cake-celebration-410398.jpg" alt="...">
			<div class="card-body">
				<h5 class="card-title">@Model.Value("packagesMediumName")</h5>
				<p class="card-text">@Model.Value("packagesMediumDescription")
					Price: @Model.Value("packagesMediumPrice")
				</p>
				<a href="#" class="btn btn-primary">Buy</a>
			</div>
		</div>

		<div class="card" style="width: 23rem;">
			<img class="img-fluid" src="/media/owwoocfu/person-pouring-champagne-on-champagne-flutes-3171770.jpg" alt="...">
			<div class="card-body">
				<h5 class="card-title">@Model.Value("packagesLargeName")</h5>
				<p class="card-text">@Model.Value("packagesLargeDescription")
					Price: @Model.Value("packagesLargePrice")
				</p>
				<a href="#" class="btn btn-primary">Buy</a>
			</div>
		</div>

	</div>
</div>

