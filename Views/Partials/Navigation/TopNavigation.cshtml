@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web;
@{ 
    var site = Model.Root();
    var selection = site.Children.Where(x => x.IsVisible());
    var home = (Home)Model.Root();
}

<nav class="navbar navbar-expand-lg navbar-light bg-info">
  <a class="navbar-brand ml-auto" href="#"></a>
    <button class="navbar-toggler" 
      type="button" data-toggle="collapse" 
      data-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" 
      aria-expanded="false" 
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <a style="color: white" class="nav-link text-light  @Html.Raw(Model.Id == site.Id ? "navi-link--active" : "")" href="@site.Url">@site.Name</a>
    @foreach (var item in selection)
    {
      <a style="color: white" class="nav-link  @(item.IsAncestorOrSelf(Model) ? "nav-link--active" : null)" href="@item.Url">@item.Name</a>
    }
    </div>
</nav>
