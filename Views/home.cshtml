@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
    var backgroundImage = Model.HeroBackgroundImage != null ? Model.HeroBackgroundImage.Url : String.Empty;
}
<hr>
<header class="jumbo">
  <div class="col-md-12">
    <div class="row h-100 align-items-center">
      <div class="col-md-12 text-center">
        <img class="card-img col-md-auto" src="/media/peqf4pvn/artboard-1.png">
        <!-- <div class="card-img-overlay">
        <img src="/media/24sjaahh/cakery.png" class="img-fluid card-text pt-20" style="position: center;">
        </div> -->
      </div>
    </div>
  </div>
</header>

<div class=" mt-5" style="max-width: auto;">
  <div class="row no-gutters">
    <div class="col-md-4 col-sm-4 col-xl-4">
      <img style="margin-left: 7rem;" src="/media/ojhhd0h2/weddingcakesmall.png" class="card-img text-nowrap" alt="wedding cake">
    </div>
    <div class="col-md-6 col-sm-6 col-xl-6 mt-5">
      <div class="card-body pt-9">
        <h2 class="card-title" style="color: #F3B2FE;">@Model.Value("weddingPageName")</h2>
        <h4 class="card-text" style="color: #B8B4A7;">@Model.Value("weddingDescription")</h4>
        <a href="/wedding" class="btn btn-info">Read more</a>
      </div>
    </div>
  </div>
</div>

<div class=" mt-5" style="max-width: auto;">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-6 col-xl-6 mt-5">
      <div class="card-body pt-9 text-right">
        <h2 class="card-title" style="color: #F3B2FE;">@Model.Value("partyPageName")</h2>
        <h4 class="card-text" style="color: #B8B4A7;">@Model.Value("PartyDescription")</h4>
        <a href="/wedding" class="btn btn-info text-right">Read more</a>
      </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xl-4">
      <img style="margin-right: 15rem;" src="/media/pycozy3h/cupcake.png" class="card-img text-nowrap" alt="Cupcake">
    </div>
  </div>
</div>